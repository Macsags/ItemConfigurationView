<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/ic_bg"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_left_text_level1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:checked="false"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/ll_first"
        android:gravity="center_vertical"
        android:textColor="@color/black_333333"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/fl_right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp">

        <EditText
            android:id="@+id/edt_right_text"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center|end"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/ll_right_icon"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:minWidth="150dp"
            android:textColor="@color/black_666666"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:textColor="@color/black_666666"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/right_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:visibility="gone" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/right_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_E5E5E5" />

</RelativeLayout>